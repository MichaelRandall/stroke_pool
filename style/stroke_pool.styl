body
  font-size 4em
  font-family sans-serif
  background #113322
  color #eeeeee

div
  //border 1px solid black
  //margin -1px
  display inline-block
  vertical-align top

.points
  font-size 2em
  text-align center
  min-width 50%
  color #eeeeee
  margin 1em 0 0 0

  label
    font-size 0.5em
    display block
    color #eebb00

.ball-list
  width 50%
  min-height 240px
  margin 1em 0 0 0

#stroke-pool
  box-sizing border-box
  background #224433
  width 100%
  height 100%
  position absolute
  left 50%
  top 50%
  transform translateX(-50%) translateY(-50%)
  -webkit-transform translateX(-50%) translateY(-50%)

.game-surface
  width 100%

.ball
  font-size 1em
  display inline-block
  margin 0
  font-weight bold

  .removed
    font-weight normal

.player
  margin 1em 0 0 0
  padding 0
  display inline-block
  width 100%
  min-height 200px

.pool-table, .player-list
  width 100%
  margin 0
  padding 0


.player.selected
    font-weight bold

.scoreUpdate
  display inline-block

.ballElement
  color black
  position relative
  width 60px
  height 60px
  text-align center
  display inline-block
  padding-top 17px
  overflow hidden
  font-size 22px
  //margin-bottom -28px
  font-weight bold
  margin 0 16px 0 0


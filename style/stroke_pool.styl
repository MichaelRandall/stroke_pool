*
  box-sizing border-boxcss text selection
  user-select none
  cursor hand

body
  font-size 36px
  font-family "Helvetica Neue", Roboto, "Droid Sans", Arial, sans-serif
  background #113322
  color #eeeeee

div
  display inline-block
  vertical-align top

.points, .ball-list
  margin 18px
  padding 18px
  background rgba(0,0,0,0.2)
  border-radius  6px

.points
  font-size 48px
  text-align center
  color #eeeeee
  width: 180px
  height: 60px

  label
    font-size 13px
    display block
    color #eebb00

.ball-list
  width: 360px
  height: 216px

#stroke-pool
  box-sizing border-box
  background #224433
  width 100%
  height 100%
  position absolute
  left 50%
  top 50%
  transform translateX(-50%) translateY(-50%)
  -webkit-transform translateX(-50%) translateY(-50%)

.game-surface
  width 100%

.ball
  font-size 1em
  display inline-block
  margin 0
  font-weight bold

  .removed
    font-weight normal

.player
  margin 1em 0 0 0
  padding 0
  display inline-block
  width 100%

.pool-table, .player-list
  width 100%
  margin 0
  padding 0


.player.selected
    font-weight bold

.scoreUpdate
  display inline-block

.ball
  overflow hidden

.ballElement
  color black
  position relative
  width 60px
  height 60px
  text-align center
  display inline-block
  font-size 22px
  //margin-bottom -28px
  font-weight bold
  margin 6px
  overflow hidden

.ballElementText
  position absolute
  left 50%
  top 50%
  transform translateX(-50%) translateY(-50%)
  -webkit-transform translateX(-50%) translateY(-50%)

